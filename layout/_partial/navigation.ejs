<% /* ===== 修改：只在非文章详情页显示头像和昵称 ===== */ %>
<% if (!is_post()) { %>
<div class="header">
  <div class="avatar">
    <a href="<%- theme.avatar.path %>">
      <% if (config.lazyload && config.lazyload.enable) { %>
        <img no-lazy src="<%- theme.avatar.author_photo %>" alt="">
      <% } else { %>
        <img src="<%- theme.avatar.author_photo %>" alt="">
      <% } %>
    </a>
    <div class="nickname">
      <a href="<%- theme.avatar.path %>"><%- theme.avatar.author_nickname %></a>
    </div>
  </div>
  <div class="navbar">
    <ul>
      <% for(let item of theme.navbar) { if (item.enable) { %>
        <li class="nav-item" data-path="<%- item.path %>">
          <a href="<%- item.path %>"><%- item.name %></a>
        </li>
      <% } } %>
    </ul>
  </div>
</div>
<% } else { %>
<% /* ===== 文章详情页只显示导航，不显示头像部分 ===== */ %>
<div class="header">
  <div class="navbar">
    <ul>
      <% for(let item of theme.navbar) { if (item.enable) { %>
        <li class="nav-item" data-path="<%- item.path %>">
          <a href="<%- item.path %>"><%- item.name %></a>
        </li>
      <% } } %>
    </ul>
  </div>
</div>
<% } %>

<%- js(['/js/activeNav.js']) %>
